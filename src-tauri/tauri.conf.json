{
  "productName": "AcademicQuest",
  "version": "4.2.0",
  "identifier": "com.renkaistudios.academicquest",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../web && npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "AcademicQuest",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "nsis", "appimage", "deb", "rpm"],
    "icon": [
      "icons/32x32.png", 
      "icons/128x128.png", 
      "icons/128x128@2x.png", 
      "icons/AcademicQuest-Icon.png",
      "icons/icon.icns", 
      "icons/AcademicQuest-Icon.ico"
    ],
    "publisher": "RenKaiStudios",
    "copyright": "Copyright Â© 2024 RenKaiStudios. All rights reserved.",
    "category": "Education",
    "shortDescription": "Academic planning and course management application",
    "longDescription": "AcademicQuest is a comprehensive academic planning and course management application designed to help students organize their academic journey, track courses, manage assignments, and plan their educational path effectively.",
    "windows": {
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "languages": ["English"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "linux": {
      "deb": {
        "depends": ["libgtk-3-0", "libwebkit2gtk-4.0-37", "libappindicator3-1", "librsvg2-2"]
      },
      "rpm": {
        "depends": ["gtk3", "webkit2gtk3", "libappindicator-gtk3", "librsvg2"]
      }
    }
  }
}
