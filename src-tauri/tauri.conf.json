{
  "productName": "AcademicQuest-Fresh",
  "version": "0.0.1",
  "identifier": "com.renkaistudio.academicquest.fresh",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../web && npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "AcademicQuest Fresh",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
